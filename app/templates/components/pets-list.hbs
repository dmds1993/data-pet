<h2>Listagem dos Pets cadastrados</h2>
<div class="row">
  {{#each pets as |pet|}}
    <div class="col-md-4">
      <div class="panel panel-default library-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{pet.nome}}</h3>
        </div>
        <div class="panel-body">
          <p>Ra√ßa: {{pet.raca}}</p>
          <p>Sexo: {{pet.sexo}}</p>
          <p>Idade: {{pet.idade}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'edit' pet.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" disabled={{isDisabled}} {{action 'deletePet' pet}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
