<div class="well">
  <ul class="nav nav-pills">
    {{#link-to 'index' tagName="li"}}<a href="">Lista</a>{{/link-to}}
  </ul>
</div>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Nome</label>
    <div class="col-sm-10">
      {{input type="text" value=model.nome class="form-control" placeholder="Nome"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Raça</label>
    <div class="col-sm-10">
      {{input type="text" value=model.raca class="form-control" placeholder="Raça"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Sexo</label>
    <div class="col-sm-10">
      {{input type="text" value=model.sexo class="form-control" placeholder="Sexo"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Idade</label>
    <div class="col-sm-10">
      {{input type="number" value=model.idade class="form-control" placeholder="Idade" required="required"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'savePet' model}}>Save changes</button>
    </div>
  </div>
</div>
